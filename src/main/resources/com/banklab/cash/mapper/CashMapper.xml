<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.banklab.cash.mapper.CashMapper">

    <resultMap id="CashMap" type="com.banklab.cash.domain.CashVO">
        <id property="id" column="id"/>
        <result property="memberId" column="member_id"/>
        <result property="cashAmount" column="cash_amount"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <!-- 회원의 현금 정보 조회 -->
    <select id="selectCashByMemberId" parameterType="Long" resultMap="CashMap">
        SELECT id, member_id, cash_amount, created_at, updated_at
        FROM cash
        WHERE member_id = #{memberId}
    </select>

    <!-- 현금 정보 저장 -->
    <insert id="insertCash" parameterType="com.banklab.cash.domain.CashVO" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO cash (
            member_id,
            cash_amount,
            created_at
        ) VALUES (
                     #{memberId},
                     #{cashAmount},
                     NOW()
                 )
    </insert>

    <!-- 현금 금액 업데이트 -->
    <update id="updateCashAmount">
        UPDATE cash
        SET cash_amount = #{cashAmount},
            updated_at = NOW()
        WHERE member_id = #{memberId}
    </update>


</mapper>